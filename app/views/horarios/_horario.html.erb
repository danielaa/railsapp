<tr id=<%= "horario_#{horario.id}" %>>
  <td><%= link_to horario.id, edit_horario_path(horario), :remote => true %></td>
  <td><%= horario.dia %></td>
  <td><%= horario.hora %></td>
  <td><%= horario.aula %></td>
  <td><%= horario.instructor.nombres %></td>
  <td><%= horario.materia.nombre %></td>
  <td><%= horario.curso.nombre %></td>

  <td>
    <%= link_to 'Mostrar', horario, :remote => true, :class => 'btn btn-mini btn-success ' %>
    <%= link_to 'Editar', edit_horario_path(horario), :remote => true,
        :class => 'btn btn-mini btn-inverse' %>
    <%= link_to 'Eliminar', horario, 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
         <%= link_to 'Pdf', horario_path(horario, :format => 'pdf'), :class => 'btn btn-mini btn-inverse' %>
  </td>
</tr>


